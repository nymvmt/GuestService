server:
  port: 8083

spring:
  application:
    name: guest-service
  datasource:
    url: jdbc:mysql://localhost:3306/guest_db?createDatabaseIfNotExist=true
    username: guest-service_user
    password: password
    driver-class-name: com.mysql.cj.jdbc.Driver
  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true
    properties:
      hibernate:
        dialect: org.hibernate.dialect.MySQL8Dialect

management:
  endpoints:
    web:
      exposure:
        include: health,info
